<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_pin_1"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:backgroundTint="@color/md_theme_light_primaryContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_pin_2"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeWidth="0dp"
        app:strokeColor="@color/deep_brown"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_pin_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="*"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_pin_2"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/md_theme_light_primaryContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_pin_3"
        app:layout_constraintStart_toEndOf="@id/card_pin_1"
        app:strokeWidth="0dp"
        app:strokeColor="@color/deep_brown"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_pin_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="*"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_pin_3"
        android:layout_width="36dp"
        android:layout_height="48dp"
        app:strokeWidth="0dp"
        app:strokeColor="@color/deep_brown"
        android:backgroundTint="@color/md_theme_light_primaryContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/card_pin_4"
        app:layout_constraintStart_toEndOf="@id/card_pin_2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_pin_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="*"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_pin_4"
        android:layout_width="36dp"
        app:strokeWidth="0dp"
        app:strokeColor="@color/deep_brown"
        android:layout_height="48dp"
        android:layout_marginEnd="48dp"
        android:backgroundTint="@color/md_theme_light_primaryContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/card_pin_3"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_pin_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="*"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>


